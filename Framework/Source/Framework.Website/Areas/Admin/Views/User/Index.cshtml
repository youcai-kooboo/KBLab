@using System.Collections
@using Framework.Data.Model
@model Framework.Website.Areas.Admin.Models.LocalPasswordModel
@{
    ViewBag.Title = "Manage Account";
    IEnumerable<UserProfile> userProfiles = ViewBag.UserProfiles;
}
<div class="row-fluid">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i class="icon-edit"></i>Manage Account</h2>
        </div> 
        <div   class="box-content"><a type="submit" class="btn btn-primary" href="@Url.Action("Register","User")">Add New Account</a></div>
        <div class="box-content">
            <div class="span12">
                <table id="CategoryListGrid" class="table table-striped table-bordered bootstrap-datatable datatable" >
                    <thead>
                        <tr role="row">
                            <th style="width: 20%" class="sorting" role="columnheader" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Actions: activate to sort column ascending" >Account</th>
                            <th class="sorting_asc" role="columnheader" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Username: activate to sort column descending">Account Type</th>
                            <th style="width: 20%" class="sorting" role="columnheader" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Actions: activate to sort column ascending" >Actions</th>
                        </tr>
                    </thead>

                    <tbody role="alert" aria-live="polite" aria-relevant="all">
                        @foreach (var item in userProfiles)
                        {
            
                            <tr class="odd">
                                <td class=" sorting_1">@item.UserName</td>
                                <td class="center ">@Roles.GetRolesForUser(item.UserName)[0]</td>

                                <td class="center ">
                                <a href="@Url.Action("Edit","User",new { userName = item.UserName })">
                                    <i class="icon-edit"></i>
                                </a>
                                    <a href="@Url.Action("Delete","User",new { userName = item.UserName })" onclick="javascript:return confirm('Are you sure to delete this item?');">
                                        <i class="icon-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
       
    </div>
    </div>
<style type="text/css">
    .box-content {
        padding-bottom: 0px;
    }
</style>