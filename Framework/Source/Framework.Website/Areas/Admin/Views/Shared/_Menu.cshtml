@using Framework.Website.Areas.Admin.Models
@{
    string name = User.Identity.Name;
    string userRoleName = Roles.GetRolesForUser(name).FirstOrDefault();
}
<div class="span2 main-menu-span" style="margin-top:10px">
                <div class="well nav-collapse sidebar-nav">
                    <ul class="nav nav-tabs nav-stacked main-menu">
                        <li class="nav-header hidden-tablet">Main</li>
                        @{
                            UserRole userRole;
                            UserRole.TryParse(userRoleName, out userRole);
                        }

                        @if (userRole == UserRole.Admin)
                        {
                            <li><a class="ajax-link" href="@Url.Action("Index","User")"><span class="hidden-tablet">Manage Account</span></a></li>
                        }
                    </ul>

                </div>
                <!--/.well -->
            </div>