@model MD.Web.Models.EditModel
@{
    ViewBag.Title = "Edit";
}


<div class="row-fluid">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i class="icon-edit"></i>Edit Account</h2>
        </div> 
        <div class="box-content">

            @using (Html.BeginForm())
            {
                <div class="alert alert-error">
                    @Html.ValidationSummary(true)

                </div>
                @Html.AntiForgeryToken()
                <fieldset>
                    <legend></legend>
                    <div class="control-group">
                        <label class="control-label">@Model.UserName</label>
                    </div>
                    <div class="control-group">
                        <label class="control-label">UserRole</label>
                        <div class="controls">
                            @Html.DropDownListFor(model => model.UserRole, (List<SelectListItem>) ViewData["UserRoles"])
                            <span class="help-inline">@Html.ValidationMessageFor(m => m.UserRole)</span>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">New Password</label>
                        <div class="controls">
                            @Html.PasswordFor(model => model.Password, new {@class = "input-xlarge focused"})
                            <span class="help-inline">@Html.ValidationMessageFor(m => m.Password)</span>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Confirm Password</label>
                        <div class="controls">
                            @Html.PasswordFor(model => model.ConfirmPassword, new {@class = "input-xlarge focused"})
                            <span class="help-inline">@Html.ValidationMessageFor(m => m.ConfirmPassword)</span>
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <button class="btn" type="reset">Cancel</button>
                    </div>
                </fieldset>
            }

        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jqueryval")

