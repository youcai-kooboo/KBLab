@using MD.Web.Models
@{
    string userRoleName = Session["UserRole"] == null ? String.Empty : Session["UserRole"].ToString();
}
<div class="span2 main-menu-span" style="margin-top:10px">
                <div class="well nav-collapse sidebar-nav">
                    <ul class="nav nav-tabs nav-stacked main-menu">
                        <li class="nav-header hidden-tablet">Main</li>
                        @{
                            UserRole userRole;
                            UserRole.TryParse(userRoleName, out userRole);
                        }

                        @if (userRole == UserRole.Admin)
                        {
                            <li><a class="ajax-link" href="@Url.Action("List","User")"><span class="hidden-tablet">Manage Account</span></a></li>
                        }
                        @if (userRole != UserRole.CustomerOverview)
                        {
                            <li><a class="ajax-link" href="@Url.Action("Index","Statistics")"><span class="hidden-tablet">Dashboard</span></a></li>
                        }
                        @if (userRole != UserRole.Statistics)
                        {
                            <li><a class="ajax-link" href="@Url.Action("Index","Customers")"><span class="hidden-tablet">Klanten</span></a></li>
                        }
                    </ul>

                </div>
                <!--/.well -->
            </div>